    <body>
        <img class="backimage" style="background: url('{{ asset('build/static/sitemainbg.jpg') }}') 50% repeat-x;">

        <title>{% block title %}{% trans %}Bienvenue sur le site du musée du Louvre{% endtrans %}{% endblock %}</title>

                    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark p-3" id="mainNavbar" >
                        <div class="container">
                            <div class="navbar-header">

                                <a class="navbar-brand text-white" href="{{path('index')}}">Louvre.fr</a>

                                <button class="navbar-toggler" type="button" style="float: right" data-toggle="collapse" data-target="#targetContent" aria-controls="targetContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                            </div>
                            <div class="collapse navbar-collapse" id="targetContent">
                                <ul class="navbar-nav mr-auto ">

                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href="#" class="btn btn-dark" role="button">{% trans %}Informations pratiques{% endtrans %}</a>
                                            </p>
                                        </li>
                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href="{{path('index')}}commander/" class="btn btn-dark" role="button">{% trans %}Commandez vos billets{% endtrans %}</a>
                                            </p>
                                        </li>
                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href="#" class="btn btn-dark" role="button">{% trans %}Visites & activités{% endtrans %}</a>
                                            </p>
                                        </li>
                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href="#" class="btn btn-dark" role="button">{% trans %}Expositions & Actualités{% endtrans %}</a>
                                            </p>
                                        </li>
                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href="#" class="btn btn-dark" role="button">{% trans %}Oeuvres & palais{% endtrans %}</a>
                                            </p>
                                        </li>
                                        <li class="nav-item">
                                            <p class="navbar-btn">
                                                <a href={% if app.request.getLocale() == 'fr' %} "/en/" {% else %} "/fr/" {% endif %} class="btn btn-dark" role="button">{% trans %}Switch to English{% endtrans %}</a>
                                            </p>
                                        </li>

                                </ul>
                            </div>
                        </div>
                    </nav>
                    

                    

                    
