                        <script src="{{ asset('build/app.js') }}"></script>
                        <script>
                        function collapse() {
                            var x = document.getElementById("mainNavbar");
                            if (x.className === "navbar") {
                                x.className += " responsive";
                            } else {
                                x.className = "navbar";
                            }
                        }
                        </script>
